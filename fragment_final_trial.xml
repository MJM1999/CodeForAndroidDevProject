<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/finaltrial"
    tools:context=".FinalTrial" >



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:minHeight="600dp"
                android:layout_height="match_parent">


                <LinearLayout
                    android:id="@+id/symbols"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@android:color/background_light"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/imgCells"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/handcuffs" />

                    <ImageView
                        android:id="@+id/imgLibrary"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/book" />

                    <ImageView
                        android:id="@+id/imgAlchemy"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/potion" />

                    <ImageView
                        android:id="@+id/imgSword"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:src="@drawable/swordsymbol" />

                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="100dp"
                    android:layout_height="275dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/design_default_color_primary_dark"
                    app:cardElevation="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgBlueTorch"
                            android:layout_width="100dp"
                            android:layout_height="200dp"
                            android:src="@drawable/unlittorch" />

                        <Button
                            android:id="@+id/btnTorchBlue"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/buttonimage"
                            android:fontFamily="@font/medievalsharp"
                            android:text="Light"
                            android:textColor="@android:color/background_light"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="275dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@android:color/holo_orange_light"
                    app:cardElevation="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgOrangeTorch"
                            android:layout_width="100dp"
                            android:layout_height="200dp"
                            android:src="@drawable/unlittorch"  />

                        <Button
                            android:id="@+id/btnTorchOrange"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/buttonimage"
                            android:fontFamily="@font/medievalsharp"
                            android:text="Light"
                            android:textColor="@android:color/background_light"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="275dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@android:color/holo_green_light"
                    app:cardElevation="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgGreenTorch"
                            android:layout_width="100dp"
                            android:layout_height="200dp"
                            android:src="@drawable/unlittorch"  />

                        <Button
                            android:id="@+id/btnTorchGreen"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/buttonimage"
                            android:fontFamily="@font/medievalsharp"
                            android:text="Light"
                            android:textColor="@android:color/background_light"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="275dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardBackgroundColor="@android:color/holo_red_dark"
                    app:cardElevation="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgRedTorch"
                            android:layout_width="100dp"
                            android:layout_height="200dp"
                            android:src="@drawable/unlittorch"  />

                        <Button
                            android:id="@+id/btnTorchRed"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/buttonimage"
                            android:fontFamily="@font/medievalsharp"
                            android:text="Light"
                            android:textColor="@android:color/background_light"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </android.support.constraint.ConstraintLayout>
        </ScrollView>
</FrameLayout>