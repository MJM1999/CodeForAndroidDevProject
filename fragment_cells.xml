<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cells"
    tools:context=".Cells">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblCellsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medievalsharp"
            android:text="Cells"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/imgBtnWall"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/crackedwall"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/imgCellWall"
            android:layout_width="200dp"
            android:layout_height="200dp"
            tools:src="@tools:sample/avatars[3]" />

        <SeekBar
            android:id="@+id/sbBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="2" />

        <Button
            android:id="@+id/btnView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/buttonimage"
            android:fontFamily="@font/medievalsharp"
            android:text="View Image At Location"
            android:textColor="@android:color/background_light"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>
    </ScrollView>

</FrameLayout>