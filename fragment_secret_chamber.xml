<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecretChamber">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/laySecretBright"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:background="@drawable/secret"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lblSecretTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medievalsharp"
                    android:text="Secret Chamber - Bright"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="200dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/secret"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:srcCompat="@drawable/greenorb" />

                            <Button
                                android:id="@+id/btnTakeGreen"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/buttonimage"
                                android:fontFamily="@font/medievalsharp"
                                android:text="Take"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/secret"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:srcCompat="@drawable/greenorb" />

                            <Button
                                android:id="@+id/btnTakeGreenReal"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/buttonimage"
                                android:fontFamily="@font/medievalsharp"
                                android:text="Take"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/secret"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:srcCompat="@drawable/greenorb" />

                            <Button
                                android:id="@+id/btnTakeGreen3"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/buttonimage"
                                android:fontFamily="@font/medievalsharp"
                                android:text="Take"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="200dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/secret"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                app:srcCompat="@drawable/greenorb" />

                            <Button
                                android:id="@+id/btnTakeGreen4"
                                android:layout_width="100dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="25dp"
                                android:background="@drawable/buttonimage"
                                android:fontFamily="@font/medievalsharp"
                                android:text="Take"
                                android:textColor="@android:color/background_light"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/laySecretDark"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:background="@drawable/secretdark"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/lblSecretTitleDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/medievalsharp"
                    android:text="Secret Chamber - Dark"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="36sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/fakeorb" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/realorb" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/fakeorb" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        app:srcCompat="@drawable/fakeorb" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
</FrameLayout>