<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="200dp"
    android:background="#B8B4B4"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="300dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imgKingCrest"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars[3]" />

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtKingName"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Name" />

            <TextView
                android:id="@+id/txtKingDate"
                android:layout_width="200dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:text="Date" />

            <TextView
                android:id="@+id/txtKingDescription"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Description" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp">

        <RadioGroup
            android:id="@+id/rgCrest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp">

            <RadioButton
                android:id="@+id/rbSword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sword" />

            <RadioButton
                android:id="@+id/rbShield"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Shield" />

            <RadioButton
                android:id="@+id/rbAxe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Axe" />

            <RadioButton
                android:id="@+id/rbHelm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Helm" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>