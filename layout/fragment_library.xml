<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/library"
    tools:context=".Library">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblLibraryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medievalsharp"
            android:text="Library"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgBooks"
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:src="@drawable/bookrows" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:src="@drawable/typewriter" />

        <EditText
            android:id="@+id/txtType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medievalsharp"
            android:text="EnterCodeHere"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnLibraryComplete"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonimage"
            android:fontFamily="@font/medievalsharp"
            android:text="Check Answer"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

    </LinearLayout>
    </ScrollView>
</FrameLayout>