<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/recordplayer"
    tools:context=".MusicRoom">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/lblMusicTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medievalsharp"
        android:text="Music Room"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblMusic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/medievalsharp"
        android:text="Choose a Record to Play:"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="28sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinMusic"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/buttonimage"
        android:gravity="left"
        android:spinnerMode="dropdown" />

    <Button
        android:id="@+id/btnMusic"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/buttonimage"
        android:fontFamily="@font/medievalsharp"
        android:onClick="changeMusic"
        android:text="Play Record"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
    </ScrollView>
</FrameLayout>