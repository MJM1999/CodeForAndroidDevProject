<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kingbedroom"
    tools:context=".KingRoom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lblKingTitle"
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medievalsharp"
            android:text="King's Bedroom"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/lvKingRoom"
            android:layout_width="300dp"
            android:layout_height="422dp">


        </ListView>

        <Button
            android:id="@+id/btnKingComplete"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonimage"
            android:fontFamily="@font/medievalsharp"
            android:text="Check Answer"
            android:textColor="@android:color/background_light"
            android:textStyle="bold" />

    </LinearLayout>
</FrameLayout>